<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:form="urn:import:stroom.widget.form.client">

    <g:FlowPanel styleName="max form-padding form">

        <!-- Template Name -->
        <form:FormGroup identity="templateSetSettingsName" label="Name">
            <g:TextBox ui:field="name" width="400px"/>
        </form:FormGroup>

        <!-- Description -->
        <form:FormGroup identity="templateSetSettingsDescription" label="Description">
            <g:TextArea ui:field="description" width="400px" height="100px"/>
        </form:FormGroup>

        <!-- Default Pipeline -->
        <form:FormGroup identity="templateSetSettingsDefaultPipeline" label="Default Pipeline">
            <g:SimplePanel ui:field="defaultPipeline"/>
        </form:FormGroup>

        <!-- Test Template Button -->
        <b:Button ui:field="testTemplate" text="Test Template" width="200px" addStyleNames="allow-focus"/>

    </g:FlowPanel>
</ui:UiBinder>
