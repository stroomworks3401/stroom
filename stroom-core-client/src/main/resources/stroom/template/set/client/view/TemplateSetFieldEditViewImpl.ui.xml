<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="solrIndexFieldUse" label="Field Use">
            <l:SelectionBox ui:field="type" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexFieldName" label="Field Name">
            <g:TextBox ui:field="fieldName" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexFieldType" label="Field Type">
            <l:SelectionBox ui:field="fieldType" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexDefaultValue" label="Default Value">
            <g:TextBox ui:field="defaultValue" addStyleNames="w-100"/>
        </form:FormGroup>

        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="required" identity="solrIndexRequired" label="Required"/>
        </form:FormGroup>

        <!-- Add other checkboxes if you implement them -->
        <!-- Example:
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="stored" identity="solrIndexStored" label="Stored"/>
        </form:FormGroup>
        -->

        <g:HTML ui:field="synchState" styleName="dock-min"/>
    </g:FlowPanel>
</ui:UiBinder>
